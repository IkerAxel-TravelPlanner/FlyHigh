<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_flyhigh"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_flyhigh_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting"
        tools:targetApi="31">

        <!-- Main Activity (La actividad principal) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Navigation"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- About Activity (PÃ¡gina sobre nosotros) -->
        <activity
            android:name=".AboutActivity"
            android:exported="true"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.App.Starting" />

        <!-- Terms and Conditions Activity -->
        <activity
            android:name=".TermsConditionsActivity"
            android:exported="true"
            android:label="@string/title_activity_terms_conditions"
            android:theme="@style/Theme.App.Starting" />

    </application>
</manifest>


